<Window x:Class="KIT206_RAP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KIT206_RAP"
        mc:Ignorable="d"
        Title="Researcher Assessment Program" Height="Auto" Width="800">
    <Grid Margin="0, 0, 4, -1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="242*"/>
            <ColumnDefinition Width="547*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical">
            <ComboBox x:Name="FilterView" Margin="10,10,0,10">

            </ComboBox>
            <StackPanel>
                <ListBox x:Name= "ResearcherListView" Height="475" Margin="10,10,0,10" VerticalAlignment="Top" Width="192"/>
                <Label Content="Researcher List"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>